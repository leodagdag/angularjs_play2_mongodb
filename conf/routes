# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
# ~~~~
GET     /                                                                           controllers.Application.index
GET     /account                                                                    controllers.Application.account
GET     /secured                                                                    controllers.Application.secured
GET     /backoffice                                                                 controllers.Application.backoffice

# Authentication
# ~~~~
POST    /auth                                                                       controllers.Application.authenticate
GET     /logout                                                                     controllers.Application.logout

# User
# ~~~~
#GET     /users                                                                      controllers.Users.all()
GET     /users/:username                                                            controllers.Users.fetch(username : String)
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
